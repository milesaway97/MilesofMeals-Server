{
  "$schema": "https://json.schemastore.org/tsconfig",
//  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "ts-node": { 
    "esm": true, 
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
